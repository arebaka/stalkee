{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
	"sourceMap": true,
	"baseUrl": ".",
	"rootDir": "./src",
    "outDir": "dist",
	"strict": true,
    "strictPropertyInitialization": false,
    "declarationDir": "dist",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*"
  ]
}
